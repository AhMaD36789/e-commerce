@model IEnumerable<E_Commerce_App.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<p>
    @if (User.IsInRole("Administrator"))
    {
        <a class="btn btn-success" asp-action="Create">Create New</a>
    }
</p>
<div class="row text-dark mt-4 p-3 ">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-sm-6 col-lg-4  mb-3 ">
            <div class="card">
                <div class="d-flex justify-content-between p-3">
                    <p class="lead fw-bold mb-0">@item.Name</p>
                    <div class="bg-info rounded-circle d-flex align-items-center justify-content-center shadow-1-strong" style="width: 35px; height: 35px;">
                        <p class="text-white mb-0 small">x4</p>
                    </div>
                </div>
                <img src="@item.ProductImage" class="card-img-top img-fluid" style="object-fit: fill; height: 200px;" alt="@item.Name" />
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <p class="fs-5">Price:</p>
                        <h5 class="text-dark mb-0">@item.Price.ToString("C") JD</h5>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        @if (item.StockQuantity == 0)
                        {
                            <p class="text-muted mb-0">Available: <span class="fw-bold">Out of stock</span></p>
                        }
                        else
                        {
                        <p class="text-muted mb-0">Available: <span class="fw-bold">@item.StockQuantity</span></p>
                        }
                        <div class="ms-auto text-warning">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        @if (User.IsInRole("Editor"))
                        {
                            <a href="@Url.Action("Edit", new { id = item.ProductId })" class="btn btn-primary m-2">Edit</a>
                        }
                        <a href="@Url.Action("Details", new { id = item.ProductId })" class="btn btn-info m-2">Details</a>
                        @if (User.IsInRole("Administrator"))
                        {
                            <a href="@Url.Action("Delete", new { id = item.ProductId })" class="btn btn-danger m-2">Delete</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>


