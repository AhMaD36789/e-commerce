@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> signInManager

@if (signInManager.IsSignedIn(User))
{
    <a class="nav-link btn btn-outline-danger text-white" asp-area="" asp-controller="Auth" asp-action="LogOut">Logout</a>
}
else
{
    
    <a class="nav-link btn btn-outline-success text-white" asp-area="" asp-controller="Auth" asp-action="Index">Login</a>
}