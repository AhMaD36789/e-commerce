@model E_Commerce_App.Models.ViewModels.CategoryProductVM

@{
    ViewData["Title"] = "View";
}

<h1>Category</h1>

<div>
    @* <h4>Category</h4>*@
    <hr />
    <dl class="row">
        <b>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.Name)
            </dd>
        </b>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary m-3">Back to List</a>
</div>


<div class="row ">
    @foreach (var item in Model.Products)
    {
        <div class="col-md-4 mb-4 text-black">
            <div class="card">
                <img src=@item.ProductImage class="card-img-top" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <h5 class="card-title">@item.Price.ToString("0.00 JD")</h5>
                    <p class="card-text">@item.Description</p>
                    <a href="@Url.Action("ProductDetails","Products", new { productID = item.ProductId })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Edit","Products", new { id = item.ProductId })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete","Products", new { id = item.ProductId })" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>

