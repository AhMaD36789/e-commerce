@model E_Commerce_App.Models.ViewModels.CategoryProductVW

@{
    ViewData["Title"] = "View";
}

<h1>Category</h1>

<div>
    @* <h4>Category</h4>*@
    <hr />
    <dl class="row">
        <b>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.Name)
            </dd>
        </b>
    </dl>
</div>

<div class="row">
    @foreach (var item in Model.Products)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="https://pngimg.com/uploads/laptop/laptop_PNG101778.png" class="card-img-top" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <h5 class="card-title">@item.Price.ToString("0.00 JD")</h5>
                    <p class="card-text">@item.Description</p>
                    <a href="@Url.Action("ProductDetails", new { productID = item.ProductId })" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Category.CategoryId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
