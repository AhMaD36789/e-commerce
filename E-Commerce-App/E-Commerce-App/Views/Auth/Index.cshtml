@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers




<section class="vh-70">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-70">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://img.freepik.com/free-photo/close-up-hand-holding-smartphone_23-2149151162.jpg?w=1060&t=st=1694284622~exp=1694285222~hmac=d51a0ce424fcc0f85a64f16ea93787258d4289264512c2922d8719935a5264a6"
                     class="img-fluid rounded-3" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form asp-controller="Auth" asp-action="Authenticate">
                    <div style="font-size:16px" class="text-danger" asp-validation-summary="All"></div>

                    <!-- UserName input -->
                    <div class="form-outline my-4">
                        <input name="UserName" type="text" id="form3Example3" class="form-control form-control-lg"
                               placeholder="Enter a valid User Name" />
                        <label class="form-label" for="form3Example3"> User Name</label>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <input name="Password" type="password" id="form3Example4" class="form-control form-control-lg"
                               placeholder="Enter password" />
                        <label class="form-label" for="form3Example4">Password</label>
                    </div>

                    <div class="d-flex justify-content-between align-items-center"></div>



                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Login
                        </button>
                        <p style="font-size:16px" class="small fw-bold mt-2 pt-1 mb-0">
                            Don't have an account? <a href="/Auth/SignUp"
                                                      class="link-danger">Register</a>
                        </p>
                    </div>

                </form>
            </div>
        </div>
    </div>

</section>

