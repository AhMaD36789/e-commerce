@model List<CartItem>

<div class="sidebar text-center">
    <h2>Cart</h2>
    <a asp-controller="Cart" asp-action="Index" class="btn btn-primary my-2">View Cart</a>
    <ul>
        @foreach (var item in Model)
        {
            <li>@item.Product.Name - @item.Product.Price - Quantity: @item.Quantity</li>
        }
    </ul>
</div>
